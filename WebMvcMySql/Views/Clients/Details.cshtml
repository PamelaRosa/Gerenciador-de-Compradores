@model WebMvcMySql.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h2 class="mb-5">Detalhes do Cliente</h2>

<section>
    <h5>Geral</h5>
    <hr />
    <dl class="row my-3 col-12">
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.TypePerson)
            </dt>
            <dd class="col-12">
                @Html.DisplayFor(model => model.TypePerson)
            </dd>
        </div>
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-12">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.CPF_CNPJ)
            </dt>
            <dd class="col-12">
                @Html.DisplayFor(model => model.CPF_CNPJ)
            </dd>
        </div>
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-12">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </div>
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-12">
                @Html.DisplayFor(model => model.Phone)
            </dd>
        </div>
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RegistrationDate)
            </dd>
        </div>
        <div class="col-3">
            <dt class="col-12">
                @Html.DisplayNameFor(model => model.IsBlocked)
            </dt>
            <dd class="col-12">
                @Html.DisplayFor(model => model.IsBlocked)
            </dd>
        </div>
    </dl>
    <h5 class="mt-5">Informações Pessoais</h5>
    <hr />
    <dl class="row my-3 col-12">
        @if (Model.TypePerson == TypePerson.Individual)
        {
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
            </div>
        }
        <div class="row d-flex col-6">
            @if (Model.IsStateDocIndividual == true)
            {
                <div class="col-6">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.IsStateDocIndividual)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.IsStateDocIndividual)
                    </dd>
                </div>
            }
            <div class="col-4">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.StateDoc)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.StateDoc)
                </dd>
            </div>
            <div class="col-auto">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.IsFree)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.IsFree)
                </dd>
            </div>
        </div>
    </dl>
</section>
<div class="row mt-4 mb-3">
    <hr />
    <div class="col-auto px-1">
        <a role="button" class="btn btn-secondary px-4" asp-action="Index">Voltar</a>
    </div>
    <div class="form-group col-auto px-1">
        <a role="button" class="btn btn-primary px-4 d-flex align-items-center" asp-action="Edit" asp-route-id="@Model?.Id">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square me-2" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
            </svg>Editar
        </a>
    </div>
</div>
