@model WebMvcMySql.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h2 class="mb-5">Detalhes do Cliente</h2>

<section class="pb-5">
    <div class="bg-white p-3 shadow-sm rounded-5 border-0 overflow-hidden">
        <h5 class="col-12 pb-3 border-bottom">Geral</h5>
        <dl class="my-3 col-12 d-flex flex-wrap gap-2">
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.TypePerson)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.TypePerson)
                </dd>
            </div>
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.CPF_CNPJ)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.CPF_CNPJ)
                </dd>
            </div>
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </div>
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </div>
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegistrationDate)
                </dd>
            </div>
            <div class="col-12 col-sm-5 col-lg-2">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.IsBlocked)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.IsBlocked)
                </dd>
            </div>
        </dl>
    </div>
    <div class="my-4 bg-white p-3 shadow-sm rounded-5 border-0 overflow-hidden">
        <h5 class="col-12 pb-3 border-bottom">Informações Pessoais</h5>
        <dl class="my-3 col-12">
            @if (Model.TypePerson == TypePerson.Individual)
            {
                <div class="col-12 col-sm-6 col-md-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.BirthDate)
                    </dd>
                </div>
            }
            <div class="row d-flex col-12 col-sm-6 col-md-6">
                @if (Model.IsStateDocIndividual == true)
                {
                    <div class="col-6">
                        <dt class="col-12">
                            @Html.DisplayNameFor(model => model.IsStateDocIndividual)
                        </dt>
                        <dd class="col-12">
                            @Html.DisplayFor(model => model.IsStateDocIndividual)
                        </dd>
                    </div>
                }
                <div class="col-8 col-sm-6 col-md-4">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.StateDoc)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.StateDoc)
                    </dd>
                </div>
                <div class="col-auto">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.IsFree)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.IsFree)
                    </dd>
                </div>
            </div>
        </dl>
        <div class="d-flex mt-4 mb-3">
            <hr />
            <div class="col-auto px-1">
                <a role="button" class="btn btn-outline-secondary border-0 px-4 d-flex align-items-center" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle me-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                    </svg>
                    Voltar
                </a>
            </div>
            <div class="form-group col-auto px-1">
                <a role="button" class="btn btn-warning px-4 d-flex align-items-center" asp-action="Edit" asp-route-id="@Model?.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square me-2" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>Editar
                </a>
            </div>
        </div>
    </div>
</section>