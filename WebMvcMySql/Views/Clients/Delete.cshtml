@model WebMvcMySql.Models.Client

@{
    ViewData["Title"] = "Exclusão";
}


<h2>Tem certeza que deseja excluir esse cliente?</h2>
<p class="text-secondary">Atenção: essa ação é irreversível, o cliente será excluido da sua base de clientes.</p>
<div class="mt-5">
    <div class="bg-white p-3 shadow-sm rounded-5 border-0 overflow-hidden">
        <h5 class="col-12 pb-3 border-bottom">Geral</h5>
        <dl class="row my-3 col-12">
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.TypePerson)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.TypePerson)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.CPF_CNPJ)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.CPF_CNPJ)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegistrationDate)
                </dd>
            </div>
            <div class="col-3">
                <dt class="col-12">
                    @Html.DisplayNameFor(model => model.IsBlocked)
                </dt>
                <dd class="col-12">
                    @Html.DisplayFor(model => model.IsBlocked)
                </dd>
            </div>
        </dl>
    </div>
    <div class="my-4 bg-white p-3 shadow-sm rounded-5 border-0 overflow-hidden">
        <h5 class="col-12 pb-3 border-bottom">Informações Pessoais</h5>
        <dl class="row my-3 col-12">
            @if (Model.TypePerson == TypePerson.Individual)
            {
                <div class="col-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
                </div>
                <div class="col-3">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.BirthDate)
                    </dd>
                </div>
            }
            <div class="col-3 d-flex">
                <div class="col-6">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.StateDoc)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.StateDoc)
                    </dd>
                </div>
                <div class="col-auto">
                    <dt class="col-12">
                        @Html.DisplayNameFor(model => model.IsFree)
                    </dt>
                    <dd class="col-12">
                        @Html.DisplayFor(model => model.IsFree)
                    </dd>
                </div>
            </div>
        </dl>
        <form asp-action="Delete" class="row mt-4 mb-3">
            <div class="col-auto px-1">
                <a role="button" class="btn btn-outline-secondary border-0 px-4 d-flex align-items-center" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle me-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                    </svg>
                    Voltar
                </a>
            </div>
            <div class="col-auto btn btn-danger px-4 d-flex align-items-center">
                <input type="hidden" asp-for="Id" />
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 me-2" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                </svg>
                <input type="submit" value="Excluir" class="btn btn-danger p-0 border-0" />
            </div>
        </form>
    </div>
</div>
